{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "functionAppName": {
            "type": "string",
            "metadata": {
                "description": "Name of the Function application and prefix for a few cloud katana resources such as Azure AD applications and managed identity"
            }
        },
        "identityId": {
            "type": "string",
            "metadata": {
                "description": "Id of the managed identity to create Azure AD applications used by cloud katana to expose its API and enable Azure AD authentication and authorization. Format: /subscriptions/SUBSCRIPTIONID/resourcegroups/GROUP/providers/Microsoft.ManagedIdentity/userAssignedIdentities/IDENTITYNAME"
            }
        },
        "_resourceNames": {
            "type": "object",
            "defaultValue": {},
            "metadata": {
                "description": "Predefined resource names. Should be set to default. The value is passed when the template is integrated into a complex pipeline."
            }
        },
        "githubRepo": {
            "type": "string",
            "defaultValue": "Azure/Cloud-Katana",
            "metadata": {
                "description": "GitHub repo name. The deployment takes the function app code from the repo and publishes it to the app service."
            }
        },
        "githubBranch": {
            "type": "string",
            "defaultValue": "main"
        },
        "githubUserName": {
            "type": "string",
            "defaultValue": "",
            "metadata": {
                "description": "Used to access a private GitHub repo. Should be empty if the repo is public"
            }
        },
        "githubPasswordOrPAT": {
            "defaultValue": "",
            "type": "securestring",
            "metadata": {
                "description": "GitHub user password or Personal Access Token. Used to access a private GitHub repo. Should be empty if the repo is public"
            }
        },
        "assignAppRoleToUser": {
            "type": "string"
        },
        "artifactsLocation": {
            "type": "string",
            "metadata": {
                "description": "The location of Cloud Katana scripts to deploy the serverless application"
            },
            "defaultValue": "https://raw.githubusercontent.com/Azure/Cloud-Katana/main"
        },
        "_artifactsLocationSasToken": {
            "type": "securestring",
            "metadata": {
                "description": "Auto-generated token to access _artifactsLocation (GITHUB_REPO_OR_STORAGE_ACCOUNT). Leave it blank unless you need to provide your own value."
            },
            "defaultValue": ""
        }
    },
    "variables": {
        "combinedResourceNames": {
            "AppName": "[tolower(parameters('functionAppName'))]",
            "Identity": "[concat(parameters('functionAppName'), 'Identity')]",
            "ServerAppName": "[concat(parameters('functionAppName'), 'Server')]",
            "ClientAppName": "[concat(parameters('functionAppName'), 'Client')]"
        },
        "resourceNames": "[if(empty(parameters('_resourceNames')), variables('combinedResourceNames'), parameters('_resourceNames'))]"
    },
    "resources": [
        {
            "type": "Microsoft.Resources/deploymentScripts",
            "apiVersion": "2020-10-01",
            "name": "createServerApp",
            "location": "[resourceGroup().location]",
            "kind": "AzureCLI",
            "identity": {
                "type": "UserAssigned",
                "userAssignedIdentities": {
                    "[parameters('identityId')]": {}
                }
            },
            "properties": {
                "environmentVariables": [
                    {
                        "name": "IdentifierUris",
                        "value": "[concat('https://', variables('resourceNames').AppName, '.azurewebsites.net')]"
                    },
                    {
                        "name": "ReplyUrls",
                        "value": "[concat('https://', variables('resourceNames').AppName, '.azurewebsites.net/.auth/login/aad/callback')]"
                    },
                    {
                        "name": "RequireAssignedRole",
                        "value": true
                    },
                    {
                        "name": "assignAppRoleToUser",
                        "value": "[parameters('assignAppRoleToUser')]"
                    },
                    {
                        "name": "Name",
                        "value": "[variables('resourceNames').ServerAppName]"
                    }
                ],
                "AzCliVersion": "2.15.0",
                "timeout": "PT30M",
                "primaryScriptUri": "[concat(parameters('artifactsLocation'), '/resources/scripts/New-AppRegistration.sh', parameters('_artifactsLocationSasToken'))]",
                "cleanupPreference": "OnSuccess",
                "retentionInterval": "PT1H"
            }
        },
        {
            "type": "Microsoft.Resources/deploymentScripts",
            "apiVersion": "2020-10-01",
            "name": "createClientApp",
            "location": "[resourceGroup().location]",
            "kind": "AzureCLI",
            "identity": {
                "type": "UserAssigned",
                "userAssignedIdentities": {
                    "[parameters('identityId')]": {}
                }
            },
            "properties": {
                "environmentVariables": [
                    {
                        "name": "NativeApp",
                        "value": true
                    },
                    {
                        "name": "ReplyUrls",
                        "value": "http://localhost"
                    },
                    {
                        "name": "RequireAssignedRole",
                        "value": true
                    },
                    {
                        "name": "DisableImplicitGrantFlowOAuth2",
                        "value": true
                    },
                    {
                        "name": "assignAppRoleToUser",
                        "value": "[parameters('assignAppRoleToUser')]"
                    },
                    {
                        "name": "Name",
                        "value": "[variables('resourceNames').ClientAppName]"
                    }
                ],
                "AzCliVersion": "2.15.0",
                "timeout": "PT30M",
                "primaryScriptUri": "[concat(parameters('artifactsLocation'), '/resources/scripts/New-AppRegistration.sh', parameters('_artifactsLocationSasToken'))]",
                "cleanupPreference": "OnSuccess",
                "retentionInterval": "PT1H"
            }
        },
        {
            "type": "Microsoft.ManagedIdentity/userAssignedIdentities",
            "apiVersion": "2018-11-30",
            "name": "[variables('resourceNames').Identity]",
            "location": "[resourceGroup().location]"
        },
        {
            "type": "Microsoft.Authorization/roleAssignments",
            "apiVersion": "2019-04-01-preview",
            "name": "[guid(resourceGroup().id, 'identityContributor')]",
            "dependsOn": [ "[variables('resourceNames').Identity]" ],
            "properties": {
                "roleDefinitionId": "[concat(subscription().id, '/providers/Microsoft.Authorization/roleDefinitions/', 'b24988ac-6180-42a0-ab88-20f7382dd24c')]",
                "principalId": "[reference(variables('resourceNames').Identity, '2018-11-30').principalId]",
                "principalType": "ServicePrincipal",
                "scope": "[resourceGroup().id]"
            }
        },
        {
            "type": "Microsoft.Resources/deploymentScripts",
            "apiVersion": "2020-10-01",
            "name": "addGraphPermissions",
            "dependsOn": [ "[variables('resourceNames').Identity]" ],
            "location": "[resourceGroup().location]",
            "kind": "AzureCLI",
            "identity": {
                "type": "UserAssigned",
                "userAssignedIdentities": {
                    "[parameters('identityId')]": {}
                }
            },
            "properties": {
                "environmentVariables": [
                    {
                        "name": "SvcPrincipalId",
                        "value": "[reference(variables('resourceNames').Identity, '2018-11-30').principalId]"
                    },
                    {
                        "name": "PermissionsFile",
                        "value": "[concat(parameters('artifactsLocation'), '/actions/permissions.json', parameters('_artifactsLocationSasToken'))]"
                    }
                ],
                "AzCliVersion": "2.15.0",
                "timeout": "PT30M",
                "primaryScriptUri": "[concat(parameters('artifactsLocation'), '/resources/scripts/Add-GraphPermissions.sh', parameters('_artifactsLocationSasToken'))]",
                "cleanupPreference": "OnSuccess",
                "retentionInterval": "PT1H"
            }
        },
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2021-04-01",
            "name": "DeployFunctionApp",
            "dependsOn": [ "createServerApp" ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat(parameters('artifactsLocation'), '/resources/templates/functionApp.json' , parameters('_artifactsLocationSasToken'))]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "serverAppId": {
                        "value": "[reference('createServerApp','2020-10-01').outputs.appId]"
                    },
                    "identityName": {
                        "value": "[variables('resourceNames').Identity]"
                    },
                    "functionAppName": {
                        "value": "[variables('resourceNames').AppName]"
                    },
                    "_packageLocation": {
                        "value": ""
                    }
                }
            }
        },
        {
            "type": "Microsoft.Resources/deploymentScripts",
            "apiVersion": "2020-10-01",
            "name": "PublishFunctionApp",
            "dependsOn": [ "DeployFunctionApp", "createClientApp", "[variables('resourceNames').Identity]" ],
            "location": "[resourceGroup().location]",
            "kind": "AzureCLI",
            "identity": {
                "type": "userAssigned",
                "userAssignedIdentities": {
                    "[resourceId('Microsoft.ManagedIdentity/userAssignedIdentities', variables('resourceNames').Identity)]": {}
                }
            },
            "properties": {
                "environmentVariables": [
                    {
                        "name": "githubRepo",
                        "value": "[parameters('githubRepo')]"
                    },
                    {
                        "name": "githubBranch",
                        "value": "[parameters('githubBranch')]"
                    },
                    {
                        "name": "githubUserName",
                        "value": "[parameters('githubUserName')]"
                    },
                    {
                        "name": "githubPassword",
                        "secureValue": "[parameters('githubPasswordOrPAT')]"
                    },
                    {
                        "name": "clientAppId",
                        "value": "[reference('createClientApp','2020-10-01').outputs.appId]"
                    },
                    {
                        "name": "tenantId",
                        "value": "[subscription().tenantId]"
                    },
                    {
                        "name": "deploymentResourceGroupName",
                        "value": "[resourceGroup().name]"
                    },
                    {
                        "name": "AppName",
                        "value": "[variables('resourceNames').AppName]"
                    }
                ],
                "AzCliVersion": "2.26.1",
                "timeout": "PT30M",
                "primaryScriptUri": "[concat(parameters('artifactsLocation'), '/resources/scripts/PublishWebApp.sh', parameters('_artifactsLocationSasToken'))]",
                "cleanupPreference": "OnSuccess",
                "retentionInterval": "PT1H"
            }
        }
    ],
    "outputs": {
        "functionAppName": {
            "type": "string",
            "value": "[variables('resourceNames').AppName]"
        },
        "identityName": {
            "type": "string",
            "value": "[variables('resourceNames').Identity]"
        },
        "serverAppName": {
            "type": "string",
            "value": "[variables('resourceNames').ServerAppName]"
        },
        "clientAppName": {
            "type": "array",
            "value": "[variables('resourceNames').ClientAppName]"
        }
    }
}